<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KondaApp.MainPage" >
        <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White" Offset="0.0" />
            <GradientStop Color="#FFF5BDD7" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView Padding="20">
        <VerticalStackLayout  Margin="50, 150">
            <Image Source="app_icon.png" WidthRequest="200"/>
            <Label Text="Welcome to Konda! " FontSize="30" HorizontalOptions="Center" />
            <Button Text="Get started" WidthRequest="250" Margin="10" Clicked="Get_Started" TextColor="#FF112222" FontAttributes="Bold" BackgroundColor="#FFE646DE"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
