<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KondaApp.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="pink"
    Title="Konda">

    <ScrollView>
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
    <SwipeView>
    <Border
        BackgroundColor="#80FFFFFF"
        StrokeThickness="1"
        Stroke="#FFFFFF"
        WidthRequest="320"
        HeightRequest="500">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="30" />
        </Border.StrokeShape>

        <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">

            <!-- Profile Image -->
            <Image Source="profile.jpg"
                   Aspect="AspectFill"
                   HeightRequest="240"
                   WidthRequest="240"
                   HorizontalOptions="Center" />

            <!-- Bio Info -->
            <Label Text="Angel, 21"
                   FontSize="24"
                   TextColor="#343A40"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label Text="UNZA Student"
                   FontSize="16"
                   TextColor="#6C757D"
                   HorizontalOptions="Center" />
            <Label Text="🍿 Movies • Food • Travel"
                   FontSize="14"
                   TextColor="#6C757D"
                   HorizontalOptions="Center" />

            <!-- Action Buttons (Inside the Card) -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,10,0,0">
                <Button Text="❤️"
                        WidthRequest="50"
                        HeightRequest="50"
                        CornerRadius="25"
                        BackgroundColor="#D63384"
                        TextColor="White"
                        Pressed="OnButtonPressed"
                        Released="OnButtonReleased" />
                <Button Text="💬"
                        WidthRequest="50"
                        HeightRequest="50"
                        CornerRadius="25"
                        BackgroundColor="#FFB84D"
                        TextColor="White"
                        Pressed="OnButtonPressed"
                        Released="OnButtonReleased" />
                <Button Text="❌"
                        WidthRequest="50"
                        HeightRequest="50"
                        CornerRadius="25"
                        BackgroundColor="#FF6B6B"
                        TextColor="White"
                        Pressed="OnButtonPressed"
                        Released="OnButtonReleased" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
    </SwipeView>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>
